<Window x:Class="View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
        xmlns:viewModel="clr-namespace:ViewModel.MainWindow;assembly=ViewModel"
        xmlns:viewModels="clr-namespace:ViewModel.MainWindow.Sections;assembly=ViewModel"
        xmlns:local="clr-namespace:View"
        Height="720" Width="1080" WindowStartupLocation="CenterScreen" WindowStyle="None"
        AllowsTransparency="True" Background="Transparent">
    
    <Window.DataContext>
        <viewModel:MainWindowViewModel/>
    </Window.DataContext>
    
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>

        <DataTemplate DataType="{x:Type viewModels:HomeViewModel}">
            <local:HomePage/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type viewModels:EventsViewModel}">
            <local:EventsPage/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type viewModels:UsersViewModel}">
            <local:UsersPage/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type viewModels:OrganizationsViewModel}">
            <local:OrganizationsPage/>
        </DataTemplate>
    </Window.Resources>

    <Border CornerRadius="15" BorderThickness="3" MouseLeftButtonDown="mainBorderMouseDown">
        <Border.BorderBrush>
            <LinearGradientBrush>
                <GradientStop Color="#4E7CA6" Offset="0"/>
                <GradientStop Color="AliceBlue" Offset="1.5"/>
            </LinearGradientBrush>
        </Border.BorderBrush>
        
        <Border.Background>
            <LinearGradientBrush>
                <GradientStop Color="AliceBlue" Offset="2"/>
                <GradientStop Color="{StaticResource backgroundColor4}" Offset="-1"/>
            </LinearGradientBrush>
        </Border.Background>
        
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!--Left SideBar-->
            <Grid Grid.Column="0">
                <Border Background="AliceBlue" CornerRadius="15">
                    <DockPanel>
                        <TextBlock Text="Афиша событий" DockPanel.Dock="Top" HorizontalAlignment="Center" Foreground="#4E7CA6" FontSize="22" 
                                   FontFamily="Calibri"  Margin="0 10 0 25"/>

                        <TextBlock Text="{Binding CurrentUserAccount.Type}" Foreground="#FF719ABF" FontSize="12" FontFamily="Calibri Light"
                                   DockPanel.Dock="Top" TextAlignment="Center" Margin="0 25 0 5"/>
                        <TextBlock Text="{Binding CurrentUserAccount.Name}" Foreground="#4E7CA6" FontSize="22" FontWeight="SemiBold" FontFamily="Calibri"
                                   DockPanel.Dock="Top" TextAlignment="Center" Margin="0 5 0 5"/>

                        <Separator Margin="25" DockPanel.Dock="Top" Height="0.8" Background="Black"/>

                        <StackPanel DockPanel.Dock="Top">

                            <RadioButton Tag="{StaticResource mainColor1}" Style="{StaticResource menuButton}" Command="{Binding ShowHomeViewCommand}">
                                <StackPanel Orientation="Horizontal">
                                    <Icon:PackIconMaterial Kind="Home" Style="{StaticResource menuButtonIcon}"/>
                                    <TextBlock Style="{StaticResource menuButtonText}" Text="Главная страница"/>
                                </StackPanel>
                            </RadioButton>

                            <RadioButton Tag="{StaticResource secondaryColor4}" Style="{StaticResource menuButton}" Command="{Binding ShowEventsViewCommand}">
                                <StackPanel Orientation="Horizontal">
                                    <Icon:PackIconMaterial Kind="Ticket" Style="{StaticResource menuButtonIcon}"/>
                                    <TextBlock Style="{StaticResource menuButtonText}" Text="События"/>
                                </StackPanel>
                            </RadioButton>

                            <RadioButton Tag="{StaticResource secondaryColor8}" Style="{StaticResource menuButton}" Command="{Binding ShowUsersViewCommand}">
                                <StackPanel Orientation="Horizontal">
                                    <Icon:PackIconMaterial Kind="AccountMultiple" Style="{StaticResource menuButtonIcon}"/>
                                    <TextBlock Style="{StaticResource menuButtonText}" Text="Менеджеры"/>
                                </StackPanel>
                            </RadioButton>

                            <RadioButton Tag="{StaticResource secondaryColor9}" Style="{StaticResource menuButton}" Command="{Binding ShowOrganizationsViewCommand}">
                                <StackPanel Orientation="Horizontal">
                                    <Icon:PackIconMaterial Kind="AccountGroup" Style="{StaticResource menuButtonIcon}"/>
                                    <TextBlock Style="{StaticResource menuButtonText}" Text="Организации"/>
                                </StackPanel>
                            </RadioButton>

                        </StackPanel>
                    </DockPanel>
                </Border>
            </Grid>

            <!--Main Section-->
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="65"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!--Top Buttons-->
                
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top">
                    <Button Style="{StaticResource controlTabButton}" Margin="0 0 15 0">
                        <Icon:PackIconMaterial Kind="Cog" Height="15" Width="15"/>
                    </Button>

                    <Button Style="{StaticResource controlTabButton}" HorizontalAlignment="Right" 
                            Click="minimizeButtonClick" Margin="0 0 0 0">
                        <Icon:PackIconMaterial Kind="WindowMinimize" Height="15" Width="15"/>
                    </Button>

                    <Button Style="{StaticResource controlTabButton}" HorizontalAlignment="Right" 
                            Click="maximizeButtonClick" Margin="0 0 0 0">
                        <Icon:PackIconMaterial Kind="WindowMaximize" Height="15" Width="15"/>
                    </Button>

                    <Button Style="{StaticResource controlTabButtonExit}" HorizontalAlignment="Right" 
                            Click="exitButtonClick" Margin="0 0 0 0">
                        <Icon:PackIconMaterial Kind="CloseCircle" Height="15" Width="15"/>
                    </Button>
                </StackPanel>

                <!--SearchBox-->
                
                

                <!--Caption-->

                <StackPanel Grid.Row="1" Margin="20" Orientation="Horizontal">
                    <Icon:PackIconMaterial Kind="{Binding Icon}" Foreground="{StaticResource mainColor2}" Height="25" Width="25"/>
                    <TextBlock Text="{Binding Caption}" Margin="10 0 0 0" FontFamily="Calibri" Foreground="{StaticResource mainColor2}" FontSize="20" FontWeight="Black"/>
                </StackPanel>

                <!--Content section-->

                <ContentControl Content="{Binding CurrentChildView}" Grid.Row="3" Margin="15">
                    
                </ContentControl>
            </Grid>
        </Grid>
    </Border>
</Window>
